<Page
    x:Class="WebTodoAppv2.Views.DetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WebTodoAppv2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Todo Detail"
    Width="800"
    Height="600"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="dictionaries/ListViewResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2.5*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding TodoLists.SelectionItem.Title}" />

        <ListView
            Grid.Row="1"
            ItemTemplate="{StaticResource DetailListViewDataTemplate}"
            ItemsSource="{Binding TodoLists.Operations}" />

    </Grid>
</Page>
